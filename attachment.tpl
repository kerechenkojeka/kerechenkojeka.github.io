[allow-download]
<a href="{link}" class="download-torrent" title="Скачать торрент {name}" rel="nofollow">
	<span class="download-torrent__name"><span>Скачать <span class="download-torrent__on-wide">торрент&nbsp;</span>{name} </span></span>
	<span class="download-torrent__size"><span>Размер: {size}</span></span>
	<span class="download-torrent__total-size">Скачиваний: {count}</span>
	<span class="download-torrent__file-name"><span>Название файла: {name}</span></span>
</a>
[allow-online]<br />Посмотреть онлайн файл: <a href="{online-view-link}" target="_blank">{name}</a>[/allow-online]
[/allow-download]
[not-allow-download]<span class="attachment">У вас нет доступа к скачиванию файлов с нашего сервера</span>[/not-allow-download]