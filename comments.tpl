<div class="comEnt report-spam-target ">
	<div class="comment clearfix">
		<div class="comment-left">
			[profile]<img src="{foto}" alt="{login}">[/profile]
		</div>
		<div class="comment-right">
			<div class="comment-right__info">
			    [rating-type-1]<div class="comment__rating">{rating}</div>[/rating-type-1]
				[rating-type-2]
				<div class="comment__rating">
					<span class="comment__rating-value">{rating}</span>
					[rating-plus]<span class="comment__rating-plus"></span>[/rating-plus]
				</div>
				[/rating-type-2]
				[rating-type-3]
				<div class="comment__rating">
					[rating-minus]<span class="comment__rating-minus"></span>[/rating-minus]
					{rating}
					[rating-plus]<span class="comment__rating-plus"></span>[/rating-plus]
				</div>
				[/rating-type-3]
				[rating-type-4]
				<div class="entry__rating type4">
					[rating-plus]<i class="fa fa-thumbs-o-up" title="Нравится"></i>[/rating-plus]
					<span class="entry__rating-value entry__rating-value_turquoise">{likes}</span>
					[rating-minus]<i class="fa fa-thumbs-o-down" title="Не нравится"></i>[/rating-minus]
					<span class="entry__rating-value entry__rating-value_red">{dislikes}</span>
				</div>
				[/rating-type-4]
				<div class="comment__about-author">
					<span class="comment__author">{author}</span><span class="comment__date">{date} {mass-action}</span>
				</div>
			</div>
			<div class="comment__text">
				{comment}
			</div>
			<!--noindex-->
			<div class="comment__links">
			    <span class="report-spam-wrap">[spam]Спам[/spam] [com-del]Удалить[/com-del] [com-edit]Изменить[/com-edit]</span>
				[fast]Цитировать[/fast]
				[reply]Ответить[/reply]
			</div>
			<!--/noindex-->
		</div>
	</div>
</div>