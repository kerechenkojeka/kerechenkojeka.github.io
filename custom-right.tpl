<div class="top-game">
	<a href="{full-link}" class="top-game__wrapper">
	    <span class="aspect-ratio">
		    <img src="{image-1}" alt="{title}" title="{title}">
		</span>
		<span class="top-game__params">
		    <span class="top-game__rating">
			    Рейтинг<br />
				[rating-type-1]<span class="top-game__rating-value">{rate-val}</span><span class="top-game__rating-max">&nbsp;/&nbsp;5.0</span>[/rating-type-1]
				[rating-type-2]<span class="top-game__rating-value">{rating}</span>[/rating-type-2]
				[rating-type-3]<span class="top-game__rating-value">{rating}</span>[/rating-type-3]
				[rating-type-4]<span class="top-game__rating-value">{likes}</span><span class="top-game__rating-max">&nbsp;/&nbsp;{dislikes}</span>[/rating-type-4]
			</span>
			<span class="top-game__size">5.85 Гб</span>
		</span>
	</a>
	<a href="{full-link}" class="top-game__title">{title}</a>
</div>