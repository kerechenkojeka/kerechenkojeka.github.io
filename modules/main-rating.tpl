<article class="col-md-2 col-sm-3 col-xs-4 movie-item">
	<a href="{full-link}" title="Смотреть {title} Онлайн бесплатно - {short-story limit="90"}...">
		<h3>{title}</h3>
		<ul>
		[xfnotgiven_openload]
			<li>Trailer</li>
		[/xfnotgiven_openload]
		[ifxfvalue cam_record="Yes"]
			<li class="red">HDCAM</li>
		[/ifxfvalue]
		[xfgiven_year]
			<li class="white">[xfvalue_year]</li>
		[/xfgiven_year]
		[xfgiven_rating]
			<li><i class="fa fa-star" aria-hidden="true"></i>{vote-num}</li>
		[/xfgiven_rating]
		</ul>
		<img src="[xfvalue_cover]" alt="Смотреть {title} Онлайн бесплатно - {short-story limit="90"}..." />
		<i class="fa fa-play" aria-hidden="true"></i>
	</a>
</article>