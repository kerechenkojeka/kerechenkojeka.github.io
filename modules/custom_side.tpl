<article class="item">
	<a href="{full-link}">
		<div class="movie-box clearfix">
			<div class="poster">
				<div class="img">
					<img src="{image-1}" alt="{title}" width="65" height="80">
				</div>
			</div>
			<div class="movie-details existing-details fx-row fx-middle fx-start">
				<div class="movie-detailsblock">
					<div class="name" title="{title}">{title}</div>
					<div class="category">
						<div class="movie-info">
							<span class="year">2019</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</a>
</article>